{{#if lessons}}
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Lesson Bundle</h3>
      </div>
      <div class="panel-body">
        <table class="table table-condensed">
          <thead>
            <th>Number of Lessons</th>
            <th>Concepts</th>
            <th>Economics Standards</th>
            <th>Personal Finance Standards</th>
            <th>Common Core Standards</th>
          </thead>
          <tbody>
            <td>{{count}}</td>
            <td>{{concepts}}</td>
            <td>{{economicsStandards}}</td>
            <td>{{personalFinanceStandards}}</td>
            <td>{{commonCoreStandards}}</td>
          </tbody>
        </table>
      </div>
    </div>
  <div class="col-md-12">
</div>
{{/if}}